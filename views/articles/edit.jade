extends ../layout

block content
  div(class='header')
    h1 The Zine
  div(id='new')
    form(method='post' action='/articles/' + article._id + '/update')
      fieldset
        h2 New Article
        div(class='title')
          label(for='title') Title 
          input(id='title' type='text' name='title' value=article.title)
        br  
        div(class='url')
          label(for='url') Background URL 
          input(id='url' type='text' name='url' value=article.url)
        br
        div(class='backgroundImage')  
          input(id='checkbox' type='checkbox' name='backgroundUrl' checked = article.background === 'on')
          label(class ='check' for='checkbox') Background image has dark colors
        br  
        div(class='excerpt')    
          label(for='excerpt') Excerpt 
          textarea(id='excerpt' type='text' name='excerpt')=article.excerpt
        br  
        div(class='body')  
          label(for='body') Body   
          textarea(id='body' type='text' name='body')=article.body
        div(class='add')
          input(type='submit' name='submit' value='Update')
          a(href='/')  Cancel 
